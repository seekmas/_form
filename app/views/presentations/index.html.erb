<h1>Listing presentations</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Description</th>
      <th>Belongs to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @presentations.each do |presentation| %>
      <tr>
        <td><%= image_tag presentation.photo.url(:small) %></td>
        <td><%= presentation.description %></td>
        <th><%= presentation.activity %></th>
        <td><%= link_to 'Show', presentation %></td>
        <td><%= link_to 'Edit', edit_presentation_path(presentation) %></td>
        <td><%= link_to 'Destroy', presentation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

