<h1>Listing chapters</h1>

<table class="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Preview</th>
      <th>Id</th>
      <th>Subject</th>

      <th>Father</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= image_tag chapter.preview.url(:thumb) %></td>
        <td><%= chapter.list_id %></td>
        <td><%= chapter.subject %></td>

        <td><%= chapter.chapter %></td>
        <td><%= link_to 'Show', chapter %></td>
        <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
        <td><%= link_to 'Destroy', chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

