<%= simple_form_for(@chapter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject %>
    <%= f.input :content %>
    <%= f.input :preview %>
    <%= f.input :list_id %>
    <%= f.association :course %>
    <%= f.association :chapter %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
