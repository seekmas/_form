<h1>Listing checks</h1>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Job</th>
      <th>Company</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checks.each do |check| %>
      <tr>
        <td><%= check.activity %></td>
        <td><%= check.name %></td>
        <td><%= check.phone %></td>
        <td><%= check.email %></td>
        <td><%= check.job %></td>
        <td><%= check.company %></td>
        <td><%= check.description %></td>
        <td><%= link_to 'Show', check %></td>
        <td><%= link_to 'Edit', edit_check_path(check) %></td>
        <td><%= link_to 'Destroy', check, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

