<h1>Listing catalogs</h1>

<table class="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Preview</th>
      <th>Subject</th>
      <th>Description</th>
      <th>Enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @catalogs.each do |catalog| %>
      <tr>
        <td><%= image_tag catalog.preview.url(:thumb)%></td>
        <td><%= catalog.subject %></td>
        <td><%= catalog.description %></td>
        <td><%= catalog.enabled %></td>
        <td><%= link_to 'Show', catalog %></td>
        <td><%= link_to 'Edit', edit_catalog_path(catalog) %></td>
        <td><%= link_to 'Destroy', catalog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

